<%= render 'shared/page_title', title: "showing all users" %>

<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="user-title"><%= link_to user.name.titleize, 
                                         user_path(user) %></li>
    <li><small><%= pluralize(user.todos.count, "todo") if user.todos %>
            </small></li>
        </div>
      </div>
    </ul>      
  <% end %>
  <%= will_paginate %>
</div>