<%= render 'shared/page_title', title: "#{ @user.name }'s Profile Page" %>
<div class="row">
  <div class="col-md-4 col-md-offset-5 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<% if @user.todos.count != 0 %>
  <h4 align="center"><%= @user.name %>'s todo</h4>
  <div align="center">
    <%= will_paginate @user_todos %>
  </div>
  <%= render 'todos/todo', obj: @user_todos %>
  <div align="center">
    <%= will_paginate @user_todos %>
  </div>
<% else %>
  <h4 align="center">No todos yet!</h4>
<% end %>
