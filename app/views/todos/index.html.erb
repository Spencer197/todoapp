<h1>Listing of all Todos</h1>

<p>
  <%= link_to "Create a Todo.", new_todo_path %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |todo| %>
  <tr>
    <td><%=todo.name%></td>
    <td><%=todo.description%></td>
    <td><%= link_to "Edit", edit_todo_path(todo) %></td><%#(todo) is the todo object which represents :id in the URI pattern of the route.%> 
    <td><%= link_to "Show", todo_path(todo) %></td>
    <td><%= link_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Are you sure?"} %></td><%# The last argument (data:...)is javascript.%>
  </tr>
  <%end%>
</table>